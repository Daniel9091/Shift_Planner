<style>
  .no-viajes-color {
    background-color: #FFFFFF; /* Color de fondo similar al de un alert azul */
  }
  
  .no-viajes-color .card.mb-4 .card-body {
    color: #0c5460; /* Color de texto similar al de un alert azul */
  }
</style>

<h1 class="text-center my-4">Mis Viajes</h1>

<% if @pilot_trips.empty? && @passenger_trips.empty? %>
  <div class="container ">
<% else %>
  <div class="container">
<% end %>

  <h2 class="mt-4">Como Piloto</h2>
  <%= link_to 'Crear nuevo viaje espontaneo', new_section_group_path(), class: 'btn btn-secondary' %>
  <% if @pilot_trips.any? %>
    <div class="row">
      <% @pilot_trips.each do |trip| %>
        <div class="col-md-4">
          <div class="card mb-4 no-viajes-color">
            <div class="card-body text-dark"> 
              <%= link_to section_group_path(trip), class: 'text-decoration-none text-dark' do %>
                <h5 class="card-title">Día: <%= trip.day %></h5>
                <p class="card-text">
                  <strong>Inicio:</strong> <%= trip.starting_place.name %><br>
                  <strong>Destino:</strong> <%= trip.ending_place.name %><br>
                  <strong>Hora de inicio:</strong> <%= trip.h_start %><br>
                  <strong>Hora de fin:</strong> <%= trip.h_end %><br>
                  <strong>Fecha:</strong> <%= trip.travel_date.strftime("%d/%m/%Y") %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">No tienes viajes como piloto.</div>
  <% end %>

  <h2 class="mt-4">Como Pasajero</h2>
  <% if @passenger_trips.any? %>
    <div class="row">
      <% @passenger_trips.each do |trip| %>
        <div class="col-md-4">
          <div class="card mb-4 no-viajes-color">
            <div class="card-body text-dark"> 
              <%= link_to section_group_path(trip), class: 'text-decoration-none text-dark' do %>
                <h5 class="card-title">Día: <%= trip.day %></h5>
                <p class="card-text">
                  <strong>Inicio:</strong> <%= trip.starting_place.name %><br>
                  <strong>Destino:</strong> <%= trip.ending_place.name %><br>
                  <strong>Hora de inicio:</strong> <%= trip.h_start %><br>
                  <strong>Hora de fin:</strong> <%= trip.h_end %><br>
                  <strong>Fecha:</strong> <%= trip.travel_date.strftime("%d/%m/%Y") %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">No tienes viajes como pasajero.</div>
  <% end %>

</div>

<%= render 'shared/navbar' %>

<div class="container mt-4">
  <%= yield %>
</div>