<div class="container">
  <h1>Registrarse</h1>

  <%= form_with model: @user, url: users_path do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@user.errors.count, "error") %> impidi√≥ que el usuario se registrara:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :phone, class: "form-label" %>
      <%= form.text_field :phone, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :data, class: "form-label" %>
      <%= form.text_field :data, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= form.submit "Registrarse", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
