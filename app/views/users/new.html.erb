<div class="container">
  <h1>Registrarse</h1>

  <%= form_with model: @user, url: users_path, local: true do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@user.errors.count, "error") %> impidi√≥ que el usuario se registrara:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control #{'is-invalid' if @user.errors[:name].any?}" %>
      <div class="invalid-feedback">
        <%= @user.errors[:name].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control #{'is-invalid' if @user.errors[:email].any?}", required: true %>
      <div class="invalid-feedback">
        <%= @user.errors[:email].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control #{'is-invalid' if @user.errors[:password].any?}", required: true %>
      <div class="invalid-feedback">
        <%= @user.errors[:password].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :phone, class: "form-label" %>
      <%= form.telephone_field :phone, class: "form-control #{'is-invalid' if @user.errors[:phone].any?}", required: true %>
      <div class="invalid-feedback">
        <%= @user.errors[:phone].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_field :description, class: "form-control #{'is-invalid' if @user.errors[:description].any?}" %>
      <div class="invalid-feedback">
        <%= @user.errors[:description].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :data_name, class: "form-label" %>
      <%= form.text_field :data_name, class: "form-control #{'is-invalid' if @user.errors[:data_name].any?}" %>
      <div class="invalid-feedback">
        <%= @user.errors[:data_name].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :data_rut, class: "form-label" %>
      <%= form.text_field :data_rut, class: "form-control #{'is-invalid' if @user.errors[:data_rut].any?}" %>
      <div class="invalid-feedback">
        <%= @user.errors[:data_rut].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :account_type, class: "form-label" %>
      <%= form.text_field :account_type, class: "form-control #{'is-invalid' if @user.errors[:account_type].any?}" %>
      <div class="invalid-feedback">
        <%= @user.errors[:account_type].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :n_account, class: "form-label" %>
      <%= form.text_field :n_account, class: "form-control #{'is-invalid' if @user.errors[:n_account].any?}" %>
      <div class="invalid-feedback">
        <%= @user.errors[:n_account].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :banc, class: "form-label" %>
      <%= form.text_field :banc, class: "form-control #{'is-invalid' if @user.errors[:banc].any?}" %>
      <div class="invalid-feedback">
        <%= @user.errors[:banc].first %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= form.label :data_email, class: "form-label" %>
      <%= form.email_field :data_email, class: "form-control #{'is-invalid' if @user.errors[:data_email].any?}" %>
      <div class="invalid-feedback">
        <%= @user.errors[:data_email].first %>
      </div>
    </div>
    
    <%= form.hidden_field :first_login, value: true %>
    
    
    <div class="mb-3">
      <%= form.submit "Registrarse", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
