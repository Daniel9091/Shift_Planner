<!DOCTYPE html>
<html>
<head>
  <title>ShiftPlaner</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Incluir los estilos de la aplicación -->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <!-- Incluir los estilos de Bootstrap desde el CDN -->
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' %>

  <!-- Incluir los estilos de Flatpickr desde el CDN -->
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css' %>
</head>
<body>
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>

  <%= yield %>

  <!-- Incluir los scripts de la aplicación -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Incluir los scripts de Bootstrap desde el CDN -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

  <!-- Incluir los scripts de Flatpickr desde el CDN -->
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

  <!-- Inicializar Flatpickr -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      flatpickr('#travel_date_input', {
        minDate: 'today'
      });
    });
  </script>
</body>
</html>
