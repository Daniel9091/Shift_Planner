<div class="container">
  <div class="card my-4">
    <div class="card-body">
      <h1 class="card-title">Detalles del Viaje</h1>
      <p class="card-text"><strong>Asientos:</strong> <%= @members_count %>/<%= @section_group.n_seats %></p>
      <p class="card-text"><strong>Costo:</strong> <%= @section_group.cost %></p>
    </div>
  </div>

  <div class="card my-4">
    <div class="card-body">
      <h2 class="card-title">Información del Piloto</h2>
      <p class="card-text"><strong>Nombre:</strong> <%= @pilot.name %></p>
      <p class="card-text"><strong>Teléfono:</strong> <%= @pilot.phone %></p>
      <p class="card-text"><strong>Email:</strong> <%= @pilot.email %></p>
    </div>
  </div>

  <div class="card my-4">
    <div class="card-body">
      <h2 class="card-title">Pasajeros</h2>
      <% if @members.any? %>
        <ul class="list-group list-group-flush">
          <% @members.each do |member| %>
            <li class="list-group-item"><%= member.name %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="card-text">No hay pasajeros.</p>
      <% end %>
    </div>
  </div>
  
  <% if @section_group.user_id == current_user.id %>
  <%= link_to 'Eliminar grupo', section_group_path(@section_group), method: :delete, data: { confirm: '¿Estás seguro de que quieres eliminar este grupo?' }, class: 'btn btn-danger' %>
  <% elsif @members.include?(current_user) %>
  <%= link_to 'Salir del grupo', leave_section_group_path(@section_group), method: :post, data: { confirm: '¿Estás seguro de que quieres salir de este grupo?' }, class: 'btn btn-warning' %>
  <% end %>

  <%= link_to 'Volver', request.referrer, class: 'btn btn-secondary' %>

</div>
